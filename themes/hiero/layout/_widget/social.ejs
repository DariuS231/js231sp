<% if (theme.social){ %>
	<div class="widget-wrap">
	<% var title = (theme.social.title && !is_current("about", false)) ? theme.social.title : __('social'); %>
		<h3 class="widget-title"><%= title %></h3>
    <div class="widget widget_athemes_social_icons">
			<div class="widget_athemes_social_icons_pic_and_buttons">
			<% var imageDivStyle = (theme.social.avatar && theme.social.links && !is_current("about", false)) ? "width: 50%;" : "display:none;"; %>
			<% var buttonsDivStyle = (theme.social.avatar && theme.social.links && !is_current("about", false)) ? "width: 50%; padding-left: 10px;" : "width: 100%; padding-left: 0px;"; %>
					<div class="widget_athemes_social_icons_pic_and_buttons_avatar" style="<%= imageDivStyle %>">
						<% if (theme.social.avatar && !is_current("about", false)) { %>
							<img src="<%= theme.social.avatar %>" alt="<%= title %>" >
						<% } %>
					</div><div class="widget_athemes_social_icons_pic_and_buttons_avatar_buttons" style="<%= buttonsDivStyle %>">
							<% if (theme.social.links){ %>
								<ul class="clearfix widget-social-icons">   
								<% Object.keys(theme.social.links).forEach(function(key) { %>
										<% if (key == 'email'){ %>
											<li><a href="mailto:<%= theme.social.links[key] %>" title="<%=key.trim()%>"><i class="fa fa-envelope" aria-hidden="true"></i></a></li> 
										<% } else {%>
											<li><a href="<%= theme.social.links[key] %>" target="_blank" title="<%=key.trim()%>"><i class="fa fa-<%= key.toLowerCase() %>" aria-hidden="true"></i></a></li> 
										<% }%>
								<% }) %>
								</ul>
							<% } %>
					</div>
			</div>
			<% if (theme.social.description && !is_current("about", false) ) { %>
				<div class="widget_athemes_social_icons_description">
						<%- theme.social.description %>
				</div>
			<% } %>
    </div>
  </div>
<% } %>
