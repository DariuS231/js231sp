<% if (theme.social){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= theme.social.title || __('connect') %></h3>
    <div class="widget widget_athemes_social_icons">
			<div style="width: 100%">
					<% var socialPanelWith = (theme.social.avatar && theme.social.links) ? "50" : "100"; %>
					<div  style="width: <%= socialPanelWith %>%;padding: 5px;margin: 0;display: inline-block;vertical-align: top;">
						<% if (theme.social.avatar) { %>
							<img src="<%= theme.social.avatar %>" alt="<%= theme.social.title || __('connect') %>"  style="width: 100%; padding: 10px;">
						<% } %>
					</div><div  style="width: <%= socialPanelWith %>%;padding: 5px;margin: 0;display: inline-block;vertical-align: top;">
							<% if (theme.social.links){ %>
								<ul class="clearfix widget-social-icons">   
								<% Object.keys(theme.social.links).forEach(function(key) { %>
										<% if (key == 'email'){ %>
											<li><a href="mailto:<%= theme.social.links[key] %>" title="<%=key.trim()%>"><i class="fa fa-envelope" aria-hidden="true"></i></a></li> 
										<% } else {%>
											<li><a href="<%= theme.social.links[key] %>" title="<%=key.trim()%>"><i class="fa fa-<%= key.toLowerCase() %>" aria-hidden="true"></i></a></li> 
										<% }%>
								<% }) %>
								</ul>
							<% } %>
					</div>
			</div>
				<% if (theme.social.description) { %>
					<div style="text-align: justify; padding: 0 10px; font-size: 14px;">
							<%- theme.social.description %>
					</div>
				<% } %>
