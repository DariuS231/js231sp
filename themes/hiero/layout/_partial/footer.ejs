<footer id="footer" class="site-footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>

  <div class="clearfix container">
      <div class="site-info">
	      &copy; <%= date(new Date(), 'YYYY') %> <%= config.title || config.author %> All Rights Reserved.
          <% if (theme.busuanzi_analytics){ %>
            <span id="busuanzi_container_site_uv">
              Visitors to this site<span id="busuanzi_value_site_uv"></span>People times  
              Total site visits<span id="busuanzi_value_site_pv"></span>Times
            </span>
          <% } %>
      </div>
      <div class="site-credit">
        <%= __('theme_by') %> <a href="https://github.com/iTimeTraveler/hexo-theme-hiero" target="_blank">hiero</a>
      </div>
  </div>
</footer>


<!-- min height -->

<script>
    var zeroIfNull = function(value){
      return value || 0;
    }
    var contentdiv = document.getElementById("content");

    contentdiv.style.minHeight = zeroIfNull(document.body.offsetHeight) - zeroIfNull(document.getElementById("allheader").offsetHeight) - zeroIfNull(document.getElementById("footer").offsetHeight) + "px";
</script>
